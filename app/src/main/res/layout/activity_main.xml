<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:theme="@style/NoAppBar">

    <!-- Code written by Kaustav Chakraborty T91/IT/196004 -->

    <ImageView
        android:id="@+id/imv_ss_logo"
        android:layout_width="426dp"
        android:layout_height="366dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ss_appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="49dp"
        android:fontFamily="@font/tomorrow_semibold"
        android:gravity="center"
        android:text="@string/extrack"
        android:textColor="@color/blue_02"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_watermark_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_ss_logo" />

    <TextView
        android:id="@+id/tv_watermark_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="made by Kaustav, Rajanyo, Nishan, Amarjeet,Md. Atif"
        android:textAlignment="center"
        android:textColor="@color/blue_05"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ss_appname" />

</androidx.constraintlayout.widget.ConstraintLayout>